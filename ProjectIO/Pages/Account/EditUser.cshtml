@page
@using ProjectIO.model
@model ProjectIO.Pages.Account.EditUserModel
@{
    <div class="container mt-5">
        <h1 class="text-center mb-4">Please, update your personal data.</h1>

        <form method="post" action="/Account/EditUser">
            @Html.AntiForgeryToken()

            <div class="form-group mb-3">
                <label asp-for="@Model.Input.Name" class="form-label">Name:</label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.Surname" class="form-label">SurName:</label>
                <input asp-for="Input.Surname" class="form-control" />
                <span asp-validation-for="Input.Surname" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.DeclaredGender" class="form-label">Gender:</label>
                <select asp-for="Input.DeclaredGender" class="form-control">
                    <option value="" disabled>Choose...</option>
                    @foreach (var gender in Enum.GetValues(typeof(Gender)))
                    {
                        <option value="@gender">@gender</option>
                    }
                </select>
                <span asp-validation-for="Input.DeclaredGender" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.PhoneNumber" class="form-label">Phone:</label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-5">
                <a href="/Account/ClientPanel" class="btn btn-danger btn-lg">Leave</a>
                <button type="submit" class="btn btn-success btn-lg">Submit</button>
            </div>
        </form>
        <div class="form-group mb-3"></div>
        <div class="form-group mb-3"></div>
    </div>


}
