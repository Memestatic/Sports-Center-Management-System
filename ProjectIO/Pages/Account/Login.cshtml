@page
@model LoginModel
@{
}

<div class="container-fluid mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4 border p-5">
            <form method="post">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                <div class="form-group row p-2">
                    <label asp-for="Input.email">Email:</label>
                    <input type="email" asp-for="Input.email" class="form-control" />
                    <span class="text-danger" asp-validation-for="Input.email"></span>
                </div>
                

                <div class="form-group row p-2">
                    <label asp-for="Input.password">Password:</label>
                    <input type="password" asp-for="Input.password" class="form-control" />
                    <span class="text-danger" asp-validation-for="Input.password"></span>
                </div>

                <div class="form-group row p-2">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>
            <span><a href="/Account/Register">Don't' have an account?</a></span>
        </div>
    </div>
</div>