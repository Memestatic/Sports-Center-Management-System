@page
@using ProjectIO.model
@model ProjectIO.Pages.Account.RegisterModel
@{
}

<div class="container-fluid mt-5 mb-2">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4 border p-5">
            <form method="post">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                <div class="form-group row p-2">
                    <label asp-for="Input.Name">First Name:</label>
                    <input type="text" asp-for="Input.Name" class="form-control" />
                    <span class="text-danger" asp-validation-for="Input.Name"></span>
                </div>

                <div class="form-group row p-2">
                    <label asp-for="Input.Surname">Last Name:</label>
                    <input type="text" asp-for="Input.Surname" class="form-control" />
                    <span class="text-danger" asp-validation-for="Input.Surname"></span>
                </div>

                <div class="form-group row p-2">
                    <label asp-for="Input.DeclaredGender">Gender:</label>
                    <select asp-for="Input.DeclaredGender" class="form-control">
                        <option value="" disabled selected>Choose...</option>
                        @foreach (var gender in Enum.GetValues(typeof(Gender)))
                        {
                            <option value="@gender">@gender</option>
                        }
                    </select>
                    <span class="text-danger" asp-validation-for="Input.DeclaredGender"></span>
                </div>


                <div class="form-group row p-2">
                    <label asp-for="Input.PhoneNumber">Phone:</label>
                    <input type="tel" asp-for="Input.PhoneNumber" class="form-control" pattern="[0-9]{9}" placeholder="123456789" />
                    <span class="text-danger" asp-validation-for="Input.PhoneNumber"></span>
                </div>

                <div class="form-group row p-2">
                    <label asp-for="Input.Email">Email:</label>
                    <input type="Email" asp-for="Input.Email" class="form-control" />
                    <span class="text-danger" asp-validation-for="Input.Email"></span>
                </div>

                <div class="form-group row p-2">
                    <label asp-for="Input.Password">Password:</label>
                    <input type="Password" asp-for="Input.Password" class="form-control" />
                    <span class="text-danger" asp-validation-for="Input.Password"></span>
                </div>

                <div class="form-group row p-2">
                    <label asp-for="Input.VerifyPassword">Verify Password:</label>
                    <input type="Password" asp-for="Input.VerifyPassword" class="form-control" />
                    <span class="text-danger" asp-validation-for="Input.VerifyPassword"></span>
                </div>

                <!-- Checkbox for Terms and Conditions -->
                <div class="form-group row p-2">
                    <div class="col-auto">
                        <input type="checkbox" id="terms" name="terms" required />
                    </div>
                    <div class="col">
                        <label for="terms">
                            I accept the <a href="/Terms" target="_blank">terms and conditions</a>.
                        </label>
                    </div>
                </div>


                <div class="form-group row p-2">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </form>
            <span><a href="/Account/Login">Already have an account?</a></span>
        </div>
    </div>
</div>
