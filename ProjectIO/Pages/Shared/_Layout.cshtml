@using ProjectIO.model
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sport Center Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/js/site.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a href="/"><img src="~/assets/logofull.png" class="img-fluid" style="max-width:150px" alt="Opis zdjęcia"></a>

                @if (CurrentPerson.GetInstance() != null)
                {
                    //<span class="text-light">Hello, @CurrentPerson.GetInstance().name</span>
                }
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link active" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/Booking">Booking</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Contact">Contact</a>
                        </li>
                        @if(CurrentPerson.GetInstance() == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link active" href="/Account/Login">Log in</a>
                            </li>
                        }
                        @if(CurrentPerson.GetInstance() != null)
                        {     
                            <li class="nav-item">
                                <a class="nav-link active" href="/Account/ClientPanel">Profile</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link active" href="/Account/Logout">Log out</a>
                            </li>
                        }
                        <!-- Nowy przycisk do zmiany motywu -->
                        <div class="theme-switch-wrapper">
                            <label class="theme-switch" for="theme-toggle-checkbox">
                                <input type="checkbox" id="theme-toggle-checkbox">
                                <span class="slider">
                                    <i class="fas fa-sun sun-icon"></i>
                                    <i class="fas fa-moon moon-icon"></i>
                                </span>
                            </label>
                        </div>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="text-center text-lg-start bg-body-tertiary text-muted bg-dark">
        <section class="bg-dark text-white py-1">
            <div class="container text-center text-md-start mt-5">
                <!-- Grid row -->
                <div class="row mt-3">
                    <!-- Grid column -->
                    <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
                        <!-- Content -->
                        <h6 class="text-uppercase fw-bold mb-4">
                            <i class="fas fa-gem me-3"></i>EVERSPORT
                        </h6>
                        <p>
                            For the better you.
                        </p>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-4 col-lg-2 col-xl-2 mx-auto mb-4">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold mb-4">
                            Useful links
                        </h6>
                        <p>
                            <a href="#!" class="text-reset">Pricing</a>
                        </p>
                        <p>
                            <a href="#!" class="text-reset">Help</a>
                        </p>
                        <p>
                            <a href="/Terms" target=”_blank” class="text-reset">Rules</a>
                        </p>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold mb-4">Contact</h6>
                        <p><i class="fas fa-home me-3"></i> New York, NY 10012, US</p>
                        <p>
                            <i class="fas fa-envelope me-3"></i>
                            ever@sport.com
                        </p>
                        <p><i class="fas fa-phone me-3"></i> + 48 213 721 37</p>
                    </div>
                    <!-- Grid column -->
                </div>
                <!-- Grid row -->
            </div>
        </section>
        <!-- Section: Links  -->
        <!-- Copyright -->
        <div class="text-center p-4 text-white bg-dark" style="background-color: rgba(0, 0, 0, 0.05);">
            © 2024 Copyright: <b>Eversport.com</b>
        </div>
        <!-- Copyright -->
    </footer>
    <!-- Footer -->
    <!-- Required Bootstrap Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>
</html>
