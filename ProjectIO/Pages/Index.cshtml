@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<!--Logo-->
<div class="position-relative vh-100" style="max-height: 70vh">
    <img src="~/assets/heroimage.png" class="img-fluid w-100 h-100" alt="Tło" style="object-fit: cover;">
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-50"></div>
    <div class="position-absolute top-50 start-0 translate-middle-y text-white ps-5">
        <h1 class="fw-bold display-3">EVERSPORT sports centre</h1>
        <p class="fs-5 mt-3">
            Discover the ultimate space to achieve your fitness goals and unlock your potential.
        </p>
        <a href="/Account/Register" class="btn btn-light btn-lg mt-4">Join us</a>
    </div>
</div>


<!--services we offer-->
<div class="position-relative vh-100" style="background-color: rgba(39, 37, 41,1); max-height: 70vh">
    <div class="position-relative top-50 start-50 translate-middle text-center text-white">
        <div class="">
            <h1 class="display-2">Explore our services</h1>
        </div>
        <section class="features py-5">
            <div class="container">
                <div class="row text-center">
                    <div class="col-md-3">
                        <div class="card shadow">
                            <div class="card-body">
                                <h5 class="card-title">Facility Booking</h5>
                                <p class="card-text">Easily book and manage your sports facilities online.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card shadow">
                            <div class="card-body">
                                <h5 class="card-title">Membership Management</h5>
                                <p class="card-text">Track and manage memberships with ease.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card shadow">
                            <div class="card-body">
                                <h5 class="card-title">Event Scheduling</h5>
                                <p class="card-text">Organize and promote events seamlessly.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card shadow">
                            <div class="card-body">
                                <h5 class="card-title">Equipment rental</h5>
                                <p class="card-text">Rent professional equipment for every sports field.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>




<!--about us-->
<div class="position-relative vh-100" style="max-height: 70vh">
    <!-- Obraz tła -->
    <img src="~/assets/img3.jpg" class="img-fluid w-100 h-100" alt="Tło" style="object-fit: cover;">

    <!-- Maska przyciemnienia -->
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-50"></div>

    <!-- Treść na zdjęciu -->
    <div class="position-absolute top-50 start-0 translate-middle-y text-white ps-5">
        <h1 class="fw-bold display-3">About us</h1>
        <p class="fs-5 mt-3">
            Learn more about our objects and community.
        </p>
        <a href="/Booking" class="btn btn-light btn-lg mt-4">Read more</a>
    </div>
</div>

<!--find us here-->
<div class="position-relative vh-100" style="background-color: rgba(33, 37, 41, 1); max-height: 70vh">
    <!-- Nagłówek -->
    <div class="text-center text-white py-3">
        <h1 class="display-2">Find us here</h1>
    </div>

    <!-- Karuzela z kartami -->
    <section class="features py-3">
        <div class="container">
            <div class="swiper">
                <div class="swiper-wrapper">
                    @foreach (var center in Model.SportsCenters)
                    {
                        <div class="swiper-slide">
                            <div class="card" style="width: 100%; max-width: 350px; margin: auto;">
                                <img src="https://via.placeholder.com/350x300"
                                     class="card-img-top"
                                     alt="@center.centerName"
                                     style="object-fit: cover; height: 300px; width: 100%;">
                                <div class="card-body">
                                    <h5 class="card-title">@center.centerName</h5>
                                    <p class="card-text">
                                        @center.centerStreet @center.centerStreetNumber,
                                        @center.centerCity, @center.centerState @center.centerZip
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Przyciski nawigacji -->
                <div class="swiper-button-next"></div>
                <div class="swiper-button-prev"></div>

                <!-- Paginacja -->
                <div class="swiper-pagination"></div>
            </div>
        </div>
    </section>
</div>



<!--contact us here-->
<div class="position-relative vh-100" style="max-height: 70vh">
    <!-- Obraz tła -->
    <img src="~/assets/ubc.jpg" class="img-fluid w-100 h-100" alt="Tło" style="object-fit: cover;">

    <!-- Maska przyciemnienia -->
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-50"></div>

    <!-- Treść na zdjęciu -->
    <div class="position-absolute top-50 start-0 translate-middle-y text-white ps-5">
        <h1 class="fw-bold display-3">Still not sure?</h1>
        <p class="fs-5 mt-3">
            Click here to send us a question.
        </p>
        <a href="/Booking" class="btn btn-light btn-lg mt-4">Contact us</a>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        new Swiper('.swiper', {
            slidesPerView: 1,
            spaceBetween: 20,
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            },
            breakpoints: {
                640: {
                    slidesPerView: 1,
                },
                768: {
                    slidesPerView: 2,
                },
                1024: {
                    slidesPerView: 3,
                },
            },
        });
    });
</script>

