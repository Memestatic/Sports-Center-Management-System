@page
@model ProjectIO.Pages.RegisterModel
@{
}

<div class="container-fluid mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4 border p-5">
            <form method="post">
                <div class="form-group row p-2">
                    <label for="firstName">First Name:</label>
                    <input type="text" id="firstName" name="firstName" class="form-control" required />
                </div>
                <div class="form-group row p-2">
                    <label for="lastName">Last Name:</label>
                    <input type="text" id="lastName" name="lastName" class="form-control" required />
                </div>
                <div class="form-group row p-2">
                    <label for="gender">Gender:</label>
                    <select id="gender" name="gender" class="form-control" required>
                        <option value="" disabled selected>Choose...</option>
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                        <option value="other">Other</option>
                    </select>
                </div>
                <div class="form-group row p-2">
                    <label for="date">Birth Date:</label>
                    <input type="date" class="form-control" id="birthDate" name="birthDate" max="" required/>
                </div>
                <div class="form-group row p-2">
                    <label for="phone">Phone:</label>
                    <input type="tel" id="phone" name="phone" class="form-control" pattern="[0-9]{9}" placeholder="123456789" required />
                </div>
                <div class="form-group row p-2">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" class="form-control" required />
                </div>
                <div class="form-group row p-2">
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" class="form-control" required />
                </div>

                <!-- Checkbox for Terms and Conditions -->
                <div class="form-group row p-2">
                    <div class="col-auto">
                        <input type="checkbox" id="terms" name="terms" required />
                    </div>
                    <div class="col">
                        <label for="terms">
                            I accept the <a href="/terms" target="_blank">terms and conditions</a>.
                        </label>
                    </div>
                </div>


                <div class="form-group row p-2">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </form>
            <span><a href="/Login">Already have an account?</a></span>
        </div>
    </div>
</div>
